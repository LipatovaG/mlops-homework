FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi==0.104.0 \
    uvicorn==0.24.0 \
    pydantic==2.5.0 \
    matplotlib==3.8.0 \
    numpy==1.24.0

# Copy source code
COPY src/pose_api.py /app/

# Expose port
EXPOSE 8001

# Run the application
CMD ["uvicorn", "pose_api:app", "--host", "0.0.0.0", "--port", "8001"]
